<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:src="@drawable/dummy"
                    android:id="@+id/ImgAllCoverPhoto"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    app:riv_corner_radius="10dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="75"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/createDtTV"
                        android:fontFamily="@font/poppins_medium"
                        android:id="@+id/postedByNameTV"
                        android:text="Machine, Vehicle, Manpower"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        android:textColor="@color/black"
                        android:textSize="14dp" />


                    <TextView
                        android:layout_alignParentTop="true"
                        android:id="@+id/createDtTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="@dimen/side_menu_padding"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_regular"
                        android:maxLines="2"
                        android:text="24 Feb, 2023"
                        android:textColor="@color/dark_gray"
                        android:textSize="13sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvAllTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:maxLines="2"
                    android:fontFamily="@font/poppins_regular"
                    android:ellipsize="end"
                    android:textAllCaps="false"
                    android:text="No. of Labour: 14"
                    android:textColor="@color/dark_gray"
                    android:textSize="14dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:maxLines="2"
                        android:fontFamily="@font/poppins_regular"
                        android:ellipsize="end"
                        android:textAllCaps="false"
                        android:text="Check In : "
                        android:textColor="@color/dark_gray"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:maxLines="2"
                        android:fontFamily="@font/poppins_regular"
                        android:ellipsize="end"
                        android:textAllCaps="false"
                        android:text="8:00AM"
                        android:textColor="@color/black"
                        android:textSize="13dp" />


                    <TextView
                        android:id="@+id/checkInTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:fontFamily="@font/poppins_regular"
                        android:ellipsize="end"
                        android:textAllCaps="false"
                        android:text="Check Out : "
                        android:textColor="@color/dark_gray"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:fontFamily="@font/poppins_regular"
                        android:ellipsize="end"
                        android:textAllCaps="false"
                        android:text="6:00PM"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>